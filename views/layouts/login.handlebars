<main class="container mt-5" style="background-color: #FFF4E3;">
  <h1 class="mb-4" style="color: #FFD700;">Lemon Login</h1>
  <form class="chess-login-form">
    <div class="mb-3">
      <label for="username" class="form-label" style="color: #FFD700;">Username</label>
      <input
        type="text"
        class="form-control"
        id="username-chess-login"
        placeholder="Username"
        style="background-color: #FFFFCC; border: 1px solid #FFD700; color: #000;"
      />
    </div>
    <div class="mb-3">
      <label for="password" class="form-label" style="color: #FFD700;">Password</label>
      <input
        type="password"
        class="form-control"
        id="password-chess-login"
        placeholder="Password"
        style="background-color: #FFFFCC; border: 1px solid #FFD700; color: #000;"
      />
    </div>
    <button type="submit" class="btn btn-warning" style="background-color: #FFD700; color: #008000;">Log In</button>
  </form>
</main>
