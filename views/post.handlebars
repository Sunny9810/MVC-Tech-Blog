<main class="container mt-5" style="background-color: #FFF4E3; padding: 20px;">
  <article>
    <h1 style="color: #FFD700;">{{title}}</h1>
    <p style="color: #FFD700;">Created by: {{user.username}} | Date: {{format_date createdAt}}</p>
    <p>{{content}}</p>
  </article>
  {{#if logged_in}}
    <form class="new-comment-form mb-3">
      <div class="mb-3">
        <label for="comment" class="form-label" style="color: #FFD700;">Add a Lemon Comment:</label>
        <textarea
          class="form-control"
          id="content-new-comment"
          rows="3"
          placeholder="Share your lemony thoughts..."
          style="background-color: #FFFFCC; border: 1px solid #FFD700; color: #000;"
        ></textarea>
      </div>
      <button type="submit" class="btn btn-warning" style="background-color: #FFD700; color: #008000;">Submit</button>
    </form>
  {{/if}}
  <h2 style="color: #FFD700;">Lemon Comment History:</h2>
  {{#each comments}}
    <div class="comment mb-3" style="background-color: #FFFFCC; padding: 10px; border: 1px solid #FFD700;">
      <p>{{comment_text}}</p>
      <p style="color: #FFD700;">By {{user.username}} on {{format_date createdAt}}</p>
    </div>
  {{/each}}
</main>

